{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "noEmitOnError": false
  },
  "include": ["*.ts", "controllers/**/*.ts", "routes/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
